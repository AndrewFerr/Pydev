<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.python.pydev.django_templates.html.DjHTMLEditor"
            contributorClass="com.aptana.editor.common.CommonTextEditorActionContributor"
            default="true"
            extensions="html,djhtml,htm,djhtm"
            icon="icons/django_templates.png"
            id="org.python.pydev.django_templates.html"
            name="%editor.djhtml.name">
         <contentTypeBinding
               contentTypeId="org.python.pydev.contenttype.django_templates.html">
         </contentTypeBinding>
      </editor>
      <editor
            class="org.python.pydev.django_templates.xml.DjXMLEditor"
            contributorClass="com.aptana.editor.common.CommonTextEditorActionContributor"
            default="true"
            extensions="xml,djxml"
            icon="icons/django_templates.png"
            id="org.python.pydev.django_templates.xml"
            name="%editor.djxml.name">
         <contentTypeBinding
               contentTypeId="org.python.pydev.contenttype.django_templates.xml">
         </contentTypeBinding>
      </editor>
   </extension>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="com.aptana.contenttype.html"
            describer="org.python.pydev.django_templates.html.DjHTMLContentDescriber"
            file-extensions="html,djhtml,htm,djhtm"
            id="org.python.pydev.contenttype.django_templates.html"
            name="%content-type.djhtml.name"
            priority="normal">
      </content-type>
      <content-type
            base-type="org.eclipse.core.runtime.xml"
            describer="org.python.pydev.django_templates.xml.DjXMLContentDescriber"
            file-extensions="xml,djxml"
            id="org.python.pydev.contenttype.django_templates.xml"
            name="%content-type.djxml.name"
            priority="normal">
      </content-type>
   </extension>
   <extension
         point="com.aptana.parsing.parser">
      <parser
            class="org.python.pydev.django_templates.html.parsing.DjHTMLParser"
            language="text/django_templates">
      </parser>
   </extension>

</plugin>
