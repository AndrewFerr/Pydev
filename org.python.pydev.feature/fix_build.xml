
<project default="fixVersions">

	<target name="fixVersions">
		<property name = "pydev.version"        value = "0.9.7"/>
		<property name="buildDirectory"         value="D:\eclipse_workspace" />

		<replaceregexp match="Bundle-Version:(.*)" replace="Bundle-Version: ${pydev.version}" byline="true">
			<fileset dir="${buildDirectory}" includes="**/*.MF"/>
		</replaceregexp>
		
		<replaceregexp file="${buildDirectory}\org.python.pydev.feature\feature.xml" match='version="0(.*)"' replace='version="${pydev.version}"' byline="true"/>
	</target>
	
	
</project>
